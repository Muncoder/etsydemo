<section id="jumbotron">
</section>

<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url(:medium) %> <br>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <%= link_to 'Show', listing_path(listing), class: 'btn btn-xs btn-info' %>
          <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-xs btn-primary' %>
          <%= link_to 'Delete', listing_path(listing), method: :delete, data: {confirm: 'Sure to delete?'}, class: 'btn btn-xs btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>


