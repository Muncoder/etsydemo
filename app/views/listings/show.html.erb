<div class="row" id="listing-show">
	<div class="col-md-4">
		<%= image_tag @listing.image %>
    	<%= link_to 'Edit', edit_listing_path(@listing), class: 'btn btn-xs btn-primary' %>
    	<%= link_to 'Delete', listing_path(@listing), method: :delete, data: {confirm: 'Sure to delete?'}, class: 'btn btn-xs btn-danger' %>
	</div>

	<div class="col-md-8">
		<h1><%= @listing.name %></h1>
		<p><%= number_to_currency(@listing.price) %></p>
		<p><%= @listing.description %></p>
	</div>


</div>